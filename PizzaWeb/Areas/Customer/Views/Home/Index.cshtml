    @foreach (var product in Model)
    {
        <div class="col-lg-4 col-sm-4">
            <div class="row p-4">
                <div class="col-10 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        @if (product.ImageUrl != null && product.ImageUrl.Count() > 0)
                        {
                            <img src="@product.ImageUrl" class="card-img-top rounded" style="height: 200px; />
                        }
                        else
                        {
                            <img src="https://placehold.co/500x600/png" class="card-img-top rounded" />
                        }                        <div class="card-body pb-0">

                           @*  <div class="pl-1">
                                <p class="text-dark text-opacity-75 text-center mb-0">
                                    List Price:
                                    <span class="text-decoration-line-through">
                                        @product.ListPrice.ToString("c")
                                    </span>
                                </p>
                            </div> *@

                            <div class="pl-1">
                                <p class="text-dark text-opacity-75 text-center">
                                    Price:
                                    <span>
                                        @product.Price100.ToString("c")
                                    </span>
                                </p>
                            </div>

                            <div class="pl-1 pb-3">
                                <p class="text-dark text-opacity-75 text-center mb-0">
                                    <span>
                                        <b>  @product.Title </b>
                                    </span>
                                </p>
                            </div>


                        </div>
                        <div>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a asp-action="Details" asp-route-productId="@product.Id" class="btn btn-primary bg-gradient border-0 form-control">
                                    Details
                                </a>
                            }
                            else
                            {
                                <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary bg-gradient border-0 form-control">
                                    Details
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

