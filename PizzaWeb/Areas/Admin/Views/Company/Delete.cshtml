@model Company


<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Catagory</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="Id" hidden/>
            <div class="border p-3 mt-4">

                <div class="form-floating py-2 col-12">
                    <input asp-for="@Model.Name" disabled class="form-control border-0 shadow" />

                    <label class="ms-2">Company Name</label>
                </div>

                <div class="form-floating py-2 col-12">
                    <label class="ms-2" asp-for="StreetAddress"></label>
                    <input asp-for="@Model.StreetAddress" disabled class="form-control border-0 shadow" />
                </div>

                <div class="form-floating py-2 col-12">
                    <label class="ms-2" asp-for="State"></label>
                    <input asp-for="@Model.State" disabled class="form-control border-0 shadow" />
                </div>

                <div class="form-floating py-2 col-12">
                    <label class="ms-2" asp-for="PhoneNumber"></label>
                    <input asp-for="@Model.PhoneNumber" disabled class="form-control border-0 shadow" />
                </div>

                <div class="form-floating py-2 col-12">
                    <label class="ms-2" asp-for="PostalCode"></label>
                    <input asp-for="@Model.PostalCode" disabled class="form-control border-0 shadow" />
                </div>

              


                <div class="row">

                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>

                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Company" asp-action="Index" class="btn btn-outline-secondary  form-control">
                            Back to List
                        </a>
                    </div>

                </div>
            </div>
        </form>
    </div>

</div>



